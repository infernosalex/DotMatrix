{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "dotmatrix",
  "version": "0.1.0",
  "identifier": "mom.byte.dotmatrix",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "DotMatrix",
        "width": 1000,
        "height": 800,
        "url": "https://dotmatrix.byte.mom"
      }
    ],
    "security": {
      "csp": "default-src 'self' https://dotmatrix.byte.mom; img-src 'self' https://dotmatrix.byte.mom data: https:; script-src 'self' 'unsafe-inline' https://dotmatrix.byte.mom; style-src 'self' 'unsafe-inline' https://dotmatrix.byte.mom;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
